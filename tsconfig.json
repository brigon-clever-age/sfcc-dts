{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "removeComments": false,
    "alwaysStrict": true,
    "declaration": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["@types"],
    "paths": {
      "dw/*": ["@types/sfcc/dw/*"]
    }
  },
  "exclude": ["dist/**/*"]
}
