{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "commonjs",
    "removeComments": false,
    "alwaysStrict": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["dist/**/*", "test/**/*"]
}
